# Basic binds

super + {1-9}
    bspc desktop -f '^{1-9}'

super + shift + {1-9}
    bspc node -d '^{1-9}' --follow

super + shift + Escape
    pkill -SIGUSR1 sxhkd

super + Return
	$TERMINAL

super + d
	dmenu_run

super + r
	$TERMINAL $FILE

super + m
	$TERMINAL ncmpcpp

super + i
	$TERMINAL htop

super + y
	$TERMINAL calcurse

super + shift + c
	camtoggle

super + w
	$BROWSER

super + Scroll_Lock
    killall screenkey || screenkey

# Network Manager interface
super + F12
	$TERMINAL nmtui

XF86AudioRaiseVolume
    pactl set-sink-volume 0 +10%

XF86AudioLowerVolume
    pactl set-sink-volume 0 -10%

